
  <div class="header">
    <%= link_to root_path do %>
      <div class="header-title">
        <h2>Plans App</h2>
      </div>
    <% end %>
    <div class="welcome">
      <h1>Plans APPへようこそ！</h1>
      <h2>ユーザー登録し利用を開始しましょう。</h2>
    </div>
  </div>



  <div class="registration">
    <div class="regist-left">
      <a href="#" class="twitter-regist"><i class="fab fa-twitter twitter-icon"></i>Twitter</a>
      <a href="#" class="facebook-regist"><i class="fab fa-facebook-square facebook-icon"></i>Facebook</a>
    </div>
    <div class="regist-right">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :id, autofocus: true, placeholder: "ユーザー名" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)" %>
        </div>

        <div class="check">
          <input type="checkbox" value=""><a href="#">利用規約</a>に同意する
        </div>

        <div class="check">
          <input type="checkbox" value=""><a href="#">プライバシーポリシー</a>に同意する
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>


<%= render "devise/shared/links" %>
