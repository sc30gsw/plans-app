<div class="wrapper">
  <%= render 'shared/note_header' %>
  <div class="note-container">
    <div class="new-content">
      <%= form_with model: @note, url: notes_path, method: :post, class: 'note_form', local: true do |f| %>
        <div class="caption-area">
          <div class="title-box">
            <%= f.text_field :title, class: "input-title", placeholder: "タイトル", maxlength: 50, autofocus: true %>
          </div>
          <div class="note-new-opt">
            <span class="note-img">
              <i class="far fa-image"></i><%= f.file_field :image, class: "input-note-image" %>
            </span>
          </div>
        </div>
        <div class="new-right-note-rule">
            <a class="new-right-note-rule-link" href= 'https://www.plans30.com/notes/2'>投稿するにあたって</a>
          </div>
        <div class="note-editor">
          <div class="note-area-left">
            <%= f.text_area :text, class: "input-text", placeholder: "テキストを入力" %>
            <%= f.text_area :plan, class: "input-plan", placeholder: "アクションプランを共有しよう" %>
            <div class="tag-box", id="tag-field">
              <%= f.text_field :name, class: "input-tag", placeholder: "例： #心理学 #メンタルヘルス" %>
            </div>
            <div id="search-result">
            </div>
          </div>
          <div class="note-area-right">
            <div class="note-preview">
              <textarea type="text" calss="input-preview" placeholder="プレビュー機能実装予定" ></textarea>
            </div>
            <div class="note-submit">
              <%= f.submit 'Plansを投稿', class: "plan-btn" %>
              <div class="plan-drop">
                <a class="nav-link" href="#" id="navbarPlanDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-caret-up"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="#"><i class="fas fa-clipboard save"></i>下書き保存</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="#"><i class="fas fa-upload upload"></i>Plansを投稿</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>