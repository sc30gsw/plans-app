<% visiter = notification.visiter %>
<% note = notification.note %>

<div class="user-view clearfix ">
  <%= link_to user_path(notification.visiter) do %>
    <% if visiter.intro.present? %>
      <%= image_tag visiter.intro.image, class: "notice-page-icon", alt: "ユーザーアイコン" %>
    <% else %>
      <img src="/assets/default.png" class="notice-page-icon " alt="ユーザーアイコン" >
    <% end %>
  <% end %>
  <div class="norice-time">
    <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
  </div>
</div>