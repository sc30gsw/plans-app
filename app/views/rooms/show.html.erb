<div class="session-header">
  <% if user_signed_in? %>
    <%= render 'shared/note_header' %>
  <% else %>
    <div class="show-header">  
      <div class="upper-header">
        <div class="upper-left">
           <%= link_to "Plans App", root_path %>
        </div>
        <div class="upper-right">
          <%= link_to "ユーザー登録", new_user_registration_path, class: "upper-regist" %>
          <%= link_to "ログイン", new_user_session_path, class: "upper-session" %>
          <%= link_to 'ゲストログイン（閲覧用）',  users_guest_sigin_in_path, method: :post, class: "guest-session" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="room-title-icon">
  <h4 class="rooms-title">気になる同士</h4>
  <%= link_to room_path(@room.id), method: :delete, class: "room-delete-link" do %>
    <i class="fas fa-trash-alt room-destroy"></i>チャットを終了する
  <% end %>
</div>
<% @entries.each do |e| %>
  <div class="user-name">
  <strong>
      <%= link_to user_path(e.user.id), class: 'upper-usericon' do %>
        <% if e.user.intro.present? %>
          <div class="session-usericon">
            <%= image_tag e.user.intro.image, class: "index-icon", alt: "ユーザーアイコン" %>
          </div> 
        <% else %> 
          <div class="session-usericon">
            <img src="/assets/default.png" class="index-icon" alt="ユーザーアイコン" >
          </div>
        <% end %> 
      <% end %>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.nickname %>さん
      </a>
  </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= link_to user_path(m.user.id), class: 'upper-usericon' do %>
              <% if m.user.intro.present? %>
                <div class="session-usericon">
                  <%= image_tag m.user.intro.image, class: "index-icon", alt: "ユーザーアイコン" %>
                </div> 
              <% else %> 
                <div class="session-usericon">
                  <img src="/assets/default.png" class="index-icon" alt="ユーザーアイコン" >
                </div>
              <% end %> 
            <% end %>
            <%= link_to m.user.nickname, user_path(m.user.id), class:"chat-nickname-link" %>
          </div>
          <div class="chat-hukidashi"> <strong><%= m.text %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :text, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>